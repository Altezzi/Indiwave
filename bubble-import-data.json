    "data_types_to_create": [
      "Comic (with all fields listed above)",
      "Chapter (with all fields listed above)", 
      "UserProgress (with all fields listed above)",
      "Creator (with all fields listed above)"
    ],
    "step_4": "Use Bubble's 'Import from CSV/JSON' feature",
    "step_5": "Upload this JSON file and map the fields correctly",
    "step_6": "Verify the data imported correctly",
    "step_7": "Set up relationships between data types (Comic -> Chapter, User -> UserProgress, etc.)"
  },
