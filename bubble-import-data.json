{
  "data_types": {
    "Comic": {
      "description": "Main comic/series data type",
      "fields": {
        "id": {
          "type": "text",
          "description": "Unique identifier for the comic"
        },
        "title": {
          "type": "text",
          "description": "Title of the comic"
        },
        "series": {
          "type": "text",
          "description": "Series name"
        },
        "author": {
          "type": "text",
          "description": "Author/Writer name"
        },
        "artist": {
          "type": "text",
          "description": "Artist name"
        },
        "year": {
          "type": "number",
          "description": "Publication year"
        },
        "cover": {
          "type": "image",
          "description": "Cover image URL"
        },
        "description": {
          "type": "text",
          "description": "Comic description"
        },
        "tags": {
          "type": "list of text",
          "description": "Genre and content tags"
        },
        "status": {
          "type": "text",
          "description": "Publication status (Ongoing, Completed, etc.)"
        },
        "totalChapters": {
          "type": "number",
          "description": "Total number of chapters"
        },
        "views": {
          "type": "number",
          "description": "Total view count"
        },
        "likes": {
          "type": "number",
          "description": "Total like count"
        },
        "created_date": {
          "type": "date",
          "description": "When the comic was added"
        }
      }
    },
    "Chapter": {
      "description": "Individual chapters within comics",
      "fields": {
        "id": {
          "type": "text",
          "description": "Unique identifier for the chapter"
        },
        "title": {
          "type": "text",
          "description": "Chapter title"
        },
        "comic": {
          "type": "Comic",
          "description": "Reference to parent comic"
        },
        "chapterNumber": {
          "type": "number",
          "description": "Chapter number in sequence"
        },
        "pages": {
          "type": "list of image",
          "description": "List of page images"
        },
        "published_date": {
          "type": "date",
          "description": "When chapter was published"
        }
      }
    },
    "UserProgress": {
      "description": "User's reading progress and preferences",
      "fields": {
        "user": {
          "type": "User",
          "description": "Reference to the user"
        },
        "comic": {
          "type": "Comic",
          "description": "Reference to the comic"
        },
        "chaptersRead": {
          "type": "number",
          "description": "Number of chapters read"
        },
        "rating": {
          "type": "number",
          "description": "User's rating (1-5)"
        },
        "isFavorite": {
          "type": "yes/no",
          "description": "Whether comic is favorited"
        },
        "readingStatus": {
          "type": "text",
          "description": "Current reading status"
        },
        "lastRead": {
          "type": "date",
          "description": "Last time user read this comic"
        },
        "dateAdded": {
          "type": "date",
          "description": "When user added to their list"
        }
      }
    },
    "Creator": {
      "description": "Creator/Author information",
      "fields": {
        "user": {
          "type": "User",
          "description": "Reference to user account"
        },
        "displayName": {
          "type": "text",
          "description": "Public display name"
        },
        "bio": {
          "type": "text",
          "description": "Creator biography"
        },
        "website": {
          "type": "text",
          "description": "Creator's website URL"
        },
        "socialLinks": {
          "type": "list of text",
          "description": "Social media links"
        },
        "isVerified": {
          "type": "yes/no",
          "description": "Whether creator is verified"
        },
        "totalViews": {
          "type": "number",
          "description": "Total views across all works"
        },
        "totalLikes": {
          "type": "number",
          "description": "Total likes across all works"
        }
      }
    }
  },
